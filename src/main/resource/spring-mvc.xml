			<mvc:exclude-mapping path="/UserController/login.do"></mvc:exclude-mapping>
			<bean class="com.fh.interceptor.LoginInterceptor"></bean>
		</mvc:interceptor>
		&lt;!&ndash; 配置权限拦截器 &ndash;&gt;
